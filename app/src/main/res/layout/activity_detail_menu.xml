<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    tools:context=".DetailBuku">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_menu"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:background="@drawable/tahugimbal" />

        <ImageView
            android:id="@+id/back_btn"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="30dp"
            android:layout_marginBottom="30dp"
            android:src="@drawable/back_btn_white" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_menu"
            android:layout_marginTop="20dp"
            android:paddingLeft="30dp"
            android:paddingRight="30dp">

            <TextView
                android:id="@+id/namaMenu"
                android:layout_width="210dp"
                android:layout_height="wrap_content"
                android:text="Tahu Gimbal"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold" />


            <TextView
                android:id="@+id/txtHarga"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/namaMenu"
                android:fontFamily="@font/inter_regular"
                android:text="Harga :"
                android:textColor="@color/black"
                android:textSize="12dp" />


            <TextView
                android:id="@+id/hargaMenu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/namaMenu"
                android:layout_toEndOf="@+id/txtHarga"
                android:paddingStart="10dp"
                android:text="Rp10.000"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/deskripsiMenu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/hargaMenu"
                android:layout_marginTop="10dp"
                android:justificationMode="inter_word"
                android:text="Satu porsi tahu gimbal berisi tahu gorang iris, gimbal udang, telur ceplok, irisan kol mentah, tauge rebus, kerupuk udang kemudian disiram bumbu kacang yang telah dicampur dengan petis udang. Lalu diberi kecap, taburan bawang merah goreng dan daun seledri"
                android:textColor="@color/black"
                android:textSize="12dp" />

            <TextView
                android:id="@+id/txtCatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/deskripsiMenu"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/inter_regular"
                android:text="Catatan untuk pesanan"
                android:textColor="@color/black"
                android:textSize="12dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/editCatatan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCatatan"
                android:layout_marginLeft="2dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="2dp"
                android:background="@drawable/form"
                android:elevation="4dp"
                android:ems="10"
                android:hint="Jangan terlalu pedas"
                android:inputType="text"
                android:padding="16dp"
                android:textColor="@color/black"
                android:textColorHint="#808080"
                android:textSize="14sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnTambahKeranjang"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_below="@+id/editCatatan"
                android:layout_marginTop="100dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/bg_btn"
                android:text="Tambahkan Keranjang"
                android:textAllCaps="false"
                android:textColor="@color/white" />

        </RelativeLayout>
    </RelativeLayout>
</ScrollView>

